{% extends "@App/base.html.twig" %}
{% block title %}Policy manager{% endblock %}
{% block pageTitle %}Policy manager{% endblock %}

{% block body %}
<div class="row" id="volume-list-page">
    <div class="col-sm-12">
        {% include '@App/layout-component/flash.html.twig' %}
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <span class="caption-subject theme-font bold uppercase">Policy manager </span>
                </div>
            </div>
            <div class="portlet-body">
                {% for item in forms %}
                <div class='table-data'>

                    {{ form_start(item.form, {'method': 'POST', 'action': path('devnet_policy_manager_save', {key : item.key}), 'attr': {'novalidate': 'novalidate', 'class' : 'jq-validate'}}) }}
                    <h4>
                        {{ item.label }}
                        <button class="green btn policy-save" type="submit"> <i class="glyphicon glyphicon-saved"></i> Save </button>
                    </h4>
                    {% for field in item.form %}
                        {{ form_row(field) }}
                    {% endfor %}
                    {{ form_end(item.form) }}
                </div>
                {% endfor %}
            </div>
        </div>

    </div>
    <!-- END PAGE CONTENT INNER -->
</div>
{% endblock %}