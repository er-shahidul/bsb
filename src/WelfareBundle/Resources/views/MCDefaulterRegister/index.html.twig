{% extends "@App/base.html.twig" %}
{% block page_title %}{{ parent() }} | Micro-credit Defaulter Register{% endblock %}

{% block body %}
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row">
        <div class="col-sm-12">

            {% include '@App/layout-component/flash.html.twig' %}

            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{% block portletTitle %}Micro-credit Defaulter Register{% endblock %}</span>
                    </div>

                    <div class="actions">
                        {% if is_granted('ROLE_WELFARE_CLERK') %}
                            <a class="btn green" href="{{ path('welfare_mc_defaulter_register_create') }}">Create Defaulter</a>
                        {% endif %}
                    </div>
                </div>

                {% block defaulter_set %}
                    <div class="portlet-body">
                        {{ sg_datatables_render_html(datatable) }}
                    </div>
                {% endblock %}
            </div>

        </div>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block stylesheets  %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datatable.css') }}">
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/datatable.js') }}"></script>
    <script src="{{ asset('bundles/welfare/js/micro-credit.js') }}"></script>

    {{ sg_datatables_render_js(datatable) }}
{% endblock %}