{% extends "@App/base.html.twig" %}
{% set pageTitle = 'Micro Credit Recipients' %}

{% block body %}

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row">
        <div class="col-sm-12">

            {% include '@App/layout-component/flash.html.twig' %}

            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">Micro Credit Recipients</span>
                    </div>

                    <div class="actions">
                        {% block action_buttons %}
                        {% endblock %}
                    </div>
                </div>

                <div class="portlet-body">
                    {% block body_content %}
                        {% trans_default_domain 'SgDatatablesBundle' %}
                        {{ sg_datatables_render_html(datatable) }}
                    {% endblock %}
                </div>
            </div>

        </div>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block stylesheets  %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datatable.css') }}">
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/datatable.js') }}"></script>

    {{ sg_datatables_render_js(datatable) }}
{% endblock %}