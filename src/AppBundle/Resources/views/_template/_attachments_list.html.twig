<table class="table table-striped table-bordered table-advance table-hover">
    <thead>
    <tr>
        <th width="20">#SN</th>
        <th><i class="fa fa-sticky-note"></i> Description</th>
        <th><i class="fa fa-info-circle"></i> Size</th>
        <th><i class="fa fa-calendar"></i> Last Updated</th>
        <th><i class="fa fa-download"></i> Action</th>
    </tr>
    </thead>
    <tbody>
    {% if attachments is defined and attachments is not empty %}
        {% for index, item in attachments %}
            <tr>
                <td class="text-center">{{ index + 1 }}</td>
                <td>{{ item.description }}</td>
                <td>{{ item.formattedSize }}</td>
                <td>{{ item.updatedAt|date('d-m-Y') }}</td>
                <td><i class="fa fa-file fa-{{ item.iconClass }}"></i>
                    <a target="_blank" href="{{ path('app_file_view', {'fileName': item.name, 'id': item.id}) }}">
                        View/Download
                    </a>
                </td>
            </tr>
        {% endfor %}
    {% else %}
        <tr>
            <td colspan="5" class="text-center"> No attachment uploaded</td>
        </tr>
    {% endif %}
    </tbody>
</table>