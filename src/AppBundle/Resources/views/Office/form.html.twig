{% extends "@App/base.html.twig" %}
{% block page_title %}{{ parent() }} | {{ pageTitle }}{% endblock %}

{% block body %}
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="volume-list-page">
        <div class="col-sm-12">
            {% include '@App/layout-component/flash.html.twig' %}
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ pageTitle }}</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="profile">
                        <div class="tabbable-line tabbable-full-width">
                            {{ form_start(form, {'method': 'POST', 'attr': {'novalidate': 'novalidate', id: 'ex-serviceman-form', 'class': 'jq-validate'}}) }}

                            <div class="row">

                                <div class="col-sm-12">
                                    <div class="col-sm-8">
                                        {{ form_row(form.name) }}
                                    </div>
                                    {% if pageTitle == "Office Create" %}
                                    <div class="col-sm-8">
                                        {{ form_row(form.officeType) }}
                                    </div>
                                    {% else %}
                                        <div class="col-sm-8">
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">Office Type</label>
                                                <div class="col-sm-10 bold" style="cursor:not-allowed;">
                                                    <span class="form-control"> {{ form.vars.value.officeType.name }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                    <div class="col-sm-8">
                                        {{ form_row(form.mobile) }}
                                    </div>
                                    <div class="col-sm-8">
                                        {{ form_row(form.phone) }}
                                    </div>
                                    <div class="col-sm-8">
                                        {{ form_row(form.fax) }}
                                    </div>
                                    <div class="col-sm-8">
                                        {{ form_row(form.geoCode) }}
                                    </div>
                                    <div class="col-sm-8">
                                        {{ form_row(form.email) }}
                                    </div>
                                    <div class="col-sm-8">
                                        {{ form_row(form.address) }}
                                    </div>
                                </div>

                                <div class="col-sm-12">
                                    <div class="col-sm-6" style="float:right;">
                                        {{ form_row(form.submit) }}
                                    </div>
                                </div>
                                </div>

                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
{% endblock include_javascripts %}