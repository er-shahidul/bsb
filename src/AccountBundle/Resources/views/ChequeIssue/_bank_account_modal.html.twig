<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">{{ title }}</h4>
</div>
<div class="modal-body">
    <div class="col-md-12">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label">Select Bank Account</label>
                <select name="fundtype" id="fundtype" class="form-control">
                    {% for bankAccount in bankAccounts %}
                        <option value="{{ path(route, {bankAccount: bankAccount.id}) }}">{{ bankAccount.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-outline dark">Close</button>
    <button type="button" class="btn green" onclick="location.href=$(this).parents('.modal').find('select').val()">Go</button>
</div>