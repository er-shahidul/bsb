{% extends "@App/base.html.twig" %}
{% set pageTitle = 'Bank Account Update' %}
{% block page_title %}{{ parent() }} | {{ pageTitle }}{% endblock %}

{% block body %}
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="volume-list-page">
        <div class="col-sm-12">
            {% include '@App/layout-component/flash.html.twig' %}
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ pageTitle }}</span>
                    </div>
                </div>
                <div class="portlet-body">

                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <input type="submit" value="Save" class="btn green" />
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="_referrer" value="{{ app.request.server.get('HTTP_REFERER')|default(path('account_bank_account_index')) }}">
                    {{ form_end(edit_form) }}

                </div>
            </div>
        </div>

    </div>

    <!-- END PAGE CONTENT INNER -->
{% endblock %}