{% extends "@App/base.html.twig" %}
{% block page_title %}{{ parent() }} | {{ pageTitle }}{% endblock %}

{% form_theme form '@BoardMeeting/Default/_form_fields.html.twig' %}

{% block body %}
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="volume-list-page">
        <div class="col-sm-12">
            {% include '@App/layout-component/flash.html.twig' %}
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ pageTitle }}</span>
                    </div>
                </div>

                <div class="portlet-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="form-actions margin-top-20">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <input type="submit" class="btn green" value="Update" />
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/boardmeeting/js/board-meeting.js') }}"></script>
{% endblock include_javascripts %}