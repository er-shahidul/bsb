{% extends "@App/base.html.twig" %}
{% set pageTitle = 'Additional Budget Demand' %}
{% block page_title %}{{ parent() }} | {{ pageTitle }}{% endblock %}

{% block body %}
    {% trans_default_domain 'SgDatatablesBundle' %}
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="volume-list-page">
        <div class="col-sm-12">
            {% include '@App/layout-component/flash.html.twig' %}
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">List of {{ pageTitle }}</span>
                    </div>
                    {% if is_granted(['ROLE_DASB_CLERK', 'ROLE_BUDGET_CLERK']) %}
                    <div class="actions">
                        <a class="btn green" href="{{ path('budget_fund_request_create') }}">
                            <i class="fa fa-plus"></i> Create New {{ pageTitle }}</a>
                    </div>
                    {% endif %}
                </div>
                <div class="portlet-body">
                    {{ sg_datatables_render_html(datatable) }}
                </div>
            </div>
        </div>

    </div>


    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block stylesheets  %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/modal.css') }}">
    <link rel="stylesheet" href="{{ asset('css/datatable.css') }}">
{% endblock %}

{% block include_javascripts %}

    {{ parent() }}

    <script src="{{ asset('js/modal.js') }}"></script>
    <script src="{{ asset('js/datatable.js') }}"></script>

    {{ sg_datatables_render_js(datatable) }}

{% endblock %}