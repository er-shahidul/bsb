{% extends "@App/base.html.twig" %}
{% set pageTitle = 'Budget Income Head Edit' %}
{% block page_title %}{{ parent() }} | {{ pageTitle }}{% endblock %}

{% block body %}
    <div class="row" id="volume-list-page">
        <div class="col-sm-12">
            {% include '@App/layout-component/flash.html.twig' %}
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">List of {{ pageTitle }}s</span>
                    </div>
                </div>
                <div class="portlet-body">
                    {{ form_start(edit_form, {'method': 'POST', attr: { novalidate: 'novalidate', 'data-ref': app.request.attributes.get('id')}}) }}
                    {{ form_widget(edit_form) }}
                    <div class="form-actions margin-top-20">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <input type="submit" class="btn green" value="Save" />
                            </div>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    {{ include('@App/Jsformvalidator-javascripts.html.twig') }}
{% endblock include_javascripts %}