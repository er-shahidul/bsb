{% extends "@App/base.html.twig" %}
{% set pageTitle = 'Budget Request Form 3 Report' %}
{% block page_title %}{{ parent() }} | {{ pageTitle }}{% endblock %}

{% block page_id %}pdf-report-page{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        {% include '@App/report.css.twig' %}
    </style>
{% endblock %}
{% block body %}

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="volume-list-page">
        <div class="col-sm-12">
            {% include '@App/layout-component/flash.html.twig' %}
            <div class="portlet light">
                <div class="portlet-title hidden-print">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ (year is null) ? pageTitle : 'Budget Request Form 3 Report of ' ~ financialYearLabel(year, true) }}</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div>
                        <form class="form hidden-print">
                            <div class="form-group col-md-2">
                                <label>Financial Year</label>
                                {% include('@Budget/Report/_financial-year.html.twig') %}
                            </div>
                            <div class="form-group col-md-6">
                                <label>&nbsp;</label><br />
                                <button class="btn blue">Show Report</button>
                                {% if year is not null %}
                                <button type="submit" class="btn blue"  formtarget="_blank" name="budget_report_form_3_report">Generate Report</button>
                                {% endif %}
                            </div>
                        </form>

                    </div>

                    {% if year is null %}
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered table-hover table-header-fixed table-checkable order-column">
                                <tr>
                                    <td>Please select financial year</td>
                                </tr>
                            </table>
                        </div>

                    {% else %}

                    <div class="col-md-12">
                        {% include '@Budget/Report/_budget-request-form-3-body.html.twig' %}
                    </div>

                    {% endif %}

                </div>
            </div>
        </div>

    </div>

    <!-- END PAGE CONTENT INNER -->
{% endblock %}